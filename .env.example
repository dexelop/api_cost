# LLM API Cost Calculator - Environment Variables

# ======================
# API Keys (선택 사항)
# ======================
# 실제 API 잔액 조회를 위한 키 (미래 기능)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# ======================
# 애플리케이션 설정
# ======================
# 디버그 모드
DEBUG=False

# 로그 레벨 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ======================
# 가격 업데이트 설정
# ======================
# 자동 업데이트 활성화
ENABLE_AUTO_PRICE_UPDATE=True

# 업데이트 주기 (시간 단위)
PRICE_UPDATE_INTERVAL_HOURS=24

# ======================
# 파일 업로드 설정
# ======================
# 최대 파일 크기 (MB)
MAX_FILE_SIZE_MB=50

# 최대 동시 업로드 파일 수
MAX_FILES_COUNT=10

# ======================
# 캐시 설정
# ======================
# 캐시 디렉토리
CACHE_DIR=data/cache

# 가격 캐시 파일
PRICE_CACHE_FILE=data/price_cache.json
